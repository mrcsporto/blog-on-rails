
<div class="shadow p-5 bg-light rounded">
  <div class="text-center mb-5">
    <h1><%= @post.title %></h1>
    <p class="text-muted">
      <strong><%= @post.author %></strong><br>
      <em><%= l(@post.created_at, format: :long) %></em><br>
    </p>
  </div>

  <p class="container col-lg-10 fs-4">
    <%= @post.body.gsub("\n", "<br>").html_safe %>
  </p>

  <div class="m-5">
    <div class="text-center">
      <h4>
        <%= pluralize(@post.comments.count, 'Comentário') %>
      </h4>
         <% if @post.comments.none? %>
          <em class="font-italic text-lowercase font-weight-light text-success"> 
            Seja o primeiro a comentar!
          </em>
        <% end %>
    </div>
  </div>

    <% @comments.each do |comment| %>
      <div class="container col-lg-8 my-3 p-4 shadow-sm border border-muted rounded bg-white">

        <div class="row d-flex flex-row">
          <div class="col fs-5">
           <strong><%= comment.author %></strong> 
          </div>
          
          <div class="col text-end">
            há <%= time_ago_in_words comment.created_at %>
          </div>
        </div>
        <hr>
        <div class="mt-3">
          <%= sanitize(comment.body.gsub("\n", "<br>")).html_safe %>
        </div>
        <br>
       
        <% if current_user %>
          <% if @current_user_name == comment.author %>
            <%= link_to "Editar", edit_comment_path(comment), class: 'btn btn-secondary' %>
            <%= link_to "Apagar", comment, method: :delete, class: 'btn btn-danger',
                data: { confirm: 'Você tem certeza?' }
              %>
          <% end %>
        <% end %>
      </div>
  <% end %>

  <div class="container col-lg-8 my-3 pt-4 px-4 shadow-sm border border-muted rounded bg-white">
    <%= form_with model: @comment, local: true do |form| %>
      <%= form.hidden_field :post_id, value: @post.id %>
        <% if current_user %>
          <%= form.hidden_field :author, value: @current_user_name %>
            <div class="form-group">
              <%= form.label :author, class: 'fs-5'%>
              <%= form.text_field :author, value: @current_user_name, disabled: true, required: true%>
            </div>
        <% else %>
              <div class="form-group">
                <%= form.label :author, class: 'fs-5'%>
                <%= form.text_field :author, required: true%>
            </div>
        <% end %>


        <div class="form-group mt-2">
          <%= form.label :body, class: 'fs-5' %>
          <%= form.text_area :body, required: true %>
        </div>

        <div class="actions my-3">
          <%= form.submit 'Enviar', 
            data: { disable_with: 'Enviando...' }, class: 'button' %>
        </div>
      <% end %>
  </div>
  
</div>

