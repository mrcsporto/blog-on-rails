
<div class="shadow p-5 bg-light rounded">
  <div class="text-center mb-5">
    <h1><%= @post.title %></h1>
    <p class="text-muted">
      <strong><%= @post.author %></strong><br>
      <em><%= l(@post.created_at, format: :long) %></em>
    </p>
  </div>

  <h4 class="px-5 font-weight-light text-muted">
    <%= @post.body.gsub("\n", "<br>").html_safe %>
  </h4>

  <div class="m-5">
    <div class="text-center">
      <h4>
        <%= pluralize(@post.comments.count, 'ComentÃ¡rio') %>
      </h4>
         <% if @post.comments.none? %>
          <em class="font-italic text-lowercase font-weight-light text-info"> Seja o primeiro a comentar!!!</em>
          <% end %>
    </div>
  </div>

  <div class="m-3 p-3">
    <%= form_with model: @comment, local: true do |form| %>
      <%= form.hidden_field :post_id, value: @post.id %>
        <div class="form-group">
          <%= form.label :author %>
          <%= form.text_field :author %>
        </div>

        <div class="form-group">
          <%= form.label :body %>
          <%= form.text_area :body %>
        </div>

        <div class="actions">
          <%= form.submit 'Enviar', 
            data: { disable_with: 'Enviando...' } %>
        </div>
      <% end %>
  </div>
</div>

