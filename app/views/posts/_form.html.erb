<%= form_with(model: post) do |form| %>
<%= form.hidden_field :author, value: @current_user_name   %>

  <div class="form-group">
    <%= form.label :title, class: 'fs-5 mt-3' %>
    <%= form.text_field :title, maxlength: 100, placeholder: 'Limitado a 50 caracteres', class: 'form-control fs-5' %>
  </div>

  <div class="form-group">
    <%= form.label :author, class: 'fs-5 mt-3' %>
    <%= form.text_field :author, class: 'fs-5', value: @current_user_name, disabled: true, required: true%>
  </div>

  <div class="form-group">
    <%= form.label :body, class: 'fs-5 mt-3'%>
    <%= form.rich_text_area :body, class: 'fs-5 form-control'%>
  </div>

  <div class="actions">
    <%= form.submit data: { disable_with: 'Criando...' }, class: 'mt-3'%>
  </div>
<% end %>

