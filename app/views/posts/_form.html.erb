<%= form_with(model: post) do |form| %>

  <div class="form-group">
    <%= form.label :title, class: 'fs-5 mt-3' %>
    <%= form.text_field :title %>
  </div>

  <div class="form-group">
    <%= form.label :author, class: 'fs-5 mt-3' %>
    <%= form.text_field :author %>
  </div>

  <div class="form-group">
    <%= form.label :body, class: 'fs-5 mt-3'%>
    <%= form.text_area :body %>
  </div>

  <div class="actions">
    <%= form.submit data: { disable_with: 'Criando...' }, class: 'mt-3'%>
  </div>
<% end %>
